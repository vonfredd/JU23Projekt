CREATE TABLE Teacher(
    teacherId INT AUTO_INCREMENT PRIMARY KEY,
    teacherFirstName VARCHAR(30) NOT NULL,
    teacherLastName VARCHAR(30) NOT NULL
);
CREATE TABLE Classroom(
    classroomId INT AUTO_INCREMENT PRIMARY KEY,
    classroomName VARCHAR(30) NOT NULL,
    classroomCapacity INT NOT NULL
);
CREATE TABLE Course(
    courseId INT AUTO_INCREMENT PRIMARY KEY,
    courseName VARCHAR(30) NOT NULL,
    courseTeacherId INT,
    courseClassroomId INT,

    FOREIGN KEY (courseTeacherId) REFERENCES Teacher(teacherId),
    FOREIGN KEY (courseClassroomId) REFERENCES Classroom(classroomId)

);
CREATE TABLE Grade(
    gradeId INT AUTO_INCREMENT PRIMARY KEY,
    gradeName VARCHAR(10),
    gradeStudentId INT,
    gradeCourseId INT NOT NULL,

    FOREIGN KEY (gradeStudentId) REFERENCES Student(strudentId),
    FOREIGN KEY (gradeCourseId) REFERENCES Grade(gradeId)
);
CREATE TABLE Student(
    studentId INT AUTO_INCREMENT PRIMARY KEY,
    studentFirstName VARCHAR(30) NOT NULL,
    studentLastName VARCHAR(30) NOT NULL
);